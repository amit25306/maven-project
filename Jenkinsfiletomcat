pipeline {
	agent any
		stages {
			stage ('scm checkout'){
				steps  {
					git branch: 'master', url: 'https://github.com/amit25306/maven-project'
				}
			}
			stage ('maven deploy'){
				steps{
					sshagent (['tomcat-pipe']) {
						sh 'scp -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/Pipe-Tomcat/webapp/target/*.war ec2-user@172.31.26.93:/usr/share/tomcat/webapps/'
					}
				}
			}
		
		}	
}
